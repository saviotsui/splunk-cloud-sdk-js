{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./src",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": [
      "es5",
      "es2015.iterable",
      "es2015.collection",
      "es2015.promise",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    // comment this out to avoid compile error in generated files
    // "noUnusedLocals": true,
    "outDir": "./src",
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es3",
    "types": []
  },
  "exclude": [
    "node_modules",
    "src/generated/**/*"
  ],
  "include": [
    "src/**/*"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  }
}
